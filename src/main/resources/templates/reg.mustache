<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Registration</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            color: #777;
            font-family: sans-serif;
            box-sizing: border-box;
        }

        html {
            height: 100%;
        }

        body {
            height: 100%;
            padding: 0 auto;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login {
            width: 300px;
            height: 300px;
            padding: 30px;
            background-color: #FFF;
            text-align: center;
            box-shadow: 0px 5px 10px 2px rgba(34, 60, 80, 0.2);
            border-radius: 10px;
        }

        .login > form > * {
            margin: 0px 0px 10px;
        }

        .login h1 {
            margin: 0px 0px 20px;
        }

        .login-screen-button {
            width: 170px;
            height: 40px;
            color: #FFF;
            border: none;
            background-color: green;
            border: 2px solid green;
            border-radius: 5px;
            font-size: large;
            padding: 5px 10px;
        }

        .login-screen-button:hover {
            background-color: #FFF;
            color: green;
        }
    </style>
</head>

<body>
    <div class="login">
        <h1>Регистрация</h1>
        <form method="post">
            <p>
                <input type="text" name="email" placeholder="Имя пользователя" />
            </p>
            <p>
                <input type="text" name="password" placeholder="Пароль пользователя">
            </p>
            <button style="margin-top: 86px" class="login-screen-button" type="submit">Зарегистрировать</button>
        </form>
    </div>
</body>

</html>