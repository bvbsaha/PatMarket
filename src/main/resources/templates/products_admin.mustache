<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Products</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <div class="contacts-wrapper">
        <div class="contacts">
            <p>Тоска, ул. Отчаяния 6</p>
            <p>&#128386; xxxxxxxxxx@gmail.com</p>
        </div>
    </div>

    <header>
        <div id="menu">
            {{#links}}
            <a href="{{link}}">{{namePage}}</a>
            {{/links}}
        </div>
    </header>

    <main>
        <div class="form-wrapper">
            <form method="post" enctype="multipart/form-data">
                <input style="width: 180px" type="text" name="name" placeholder="Product name">
                <input style="width: 100px" type="text" name="price" placeholder="Price">
                <select name="categoryId">
                    {{#categories}}
                    <div>
                        <option value="{{categoryId}}">{{categoryName}}</option>
                    </div>
                    {{/categories}}
                </select>
                <select name="animalId">
                    {{#animals}}
                    <div>
                        <option value="{{animalId}}">{{animalName}}</option>
                    </div>
                    {{/animals}}
                </select>

                <div class="input-wrapper">
                    <input type="file" name="file" id="input-file">
                    <label for="input-file">Выберите файл</label>
                </div>
                <button type="submit">Добавить</button>
            </form>

        </div>

        <div class="list-flex">
            {{#products}}
            <div class="product">
                <img src="{{productUrl}}" alt="здесь могло быть фото продукта" />
                <p><b>цена: </b>{{price}}</p>
                {{#animal}}
                <p><b> бренд: </b>{{sportName}}</p>
                {{/animal}}
                {{#category}}
                <p><b>категория:</b>{{categoryName}}</p>
                {{/category}}
                <p><b>продукт:</b>{{productName}}</p>
                <form action="/products/delete/{{productId}}" method="post">
                    <button type="submit">delete</button>
                </form>
                <form action="/products/update/{{productId}}" method="get">
                    <button type="submit">update</button>
                </form>
            </div>
            {{/products}}
    </main>

</body>

</html>