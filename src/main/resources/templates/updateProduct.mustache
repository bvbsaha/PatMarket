<mustache lang="en">

    <head>
        <meta charset="utf-8">
        <title>Update Product</title>
        <link rel="stylesheet" href="/css/style.css">
    </head>

    <body>

        <div class="contacts-wrapper">
            <div class="contacts">
                <p>Тоска, ул. Отчаяния 6</p>
                <p>&#128386; xxxxxxxxxx@gmail.com</p>
            </div>
        </div>

        <header>
            <div id="menu">
                {{#links}}
                <a href="{{link}}">{{namePage}}</a>
                {{/links}}
            </div>
        </header>

        <main>
            {{#patProduct}}
            <div class="form-wrapper">
                <form method="post" enctype="multipart/form-data">
                    <input type="text" name="name" value="{{productName}}" placeholder="name" />
                    <input type="number" name="price" value="{{price}}" placeholder="price" />
                    <div class="input-wrapper">
                        <input type="file" name="file" id="input-file">
                        <label for="input-file">Выберите файл</label>
                    </div>
                    <button type="submit">Обновить</button>
                </form>
            </div>

            {{/patProduct}}
        </main>

        </div>
    </body>

</mustache>